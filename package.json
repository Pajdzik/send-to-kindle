{
  "name": "send-to-kindle",
  "version": "1.0.0",
  "description": "Send documents to Kindle",
  "private": true,
  "type": "module",
  "packageManager": "npm@10.9.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "lint": "biome lint .",
    "lint-fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.3",
    "@types/jsdom": "^21.1.7",
    "@types/jszip": "^3.4.0",
    "@types/node": "^24.3.1",
    "turbo": "^2.5.6",
    "typescript": "^5.4.5",
    "vitest": "^3.2.4"
  },
  "optionalDependencies": {
    "@biomejs/cli-linux-x64": "^1.7.3",
    "@rollup/rollup-linux-x64-gnu": "^4.44.2"
  },
  "dependencies": {
    "@types/chrome": "^0.1.6",
    "resend": "^6.0.2",
    "wrangler": "^4.34.0"
  }
}
