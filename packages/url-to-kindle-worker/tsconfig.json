{
  "extends": "../../tsconfig.package.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "types": ["@cloudflare/workers-types"],
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "article-fetcher": ["../article-fetcher/dist/index"],
      "email-sender": ["../email-sender/dist/index"],
      "epub-converter": ["../epub-converter/dist/index"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"],
  "references": [
    { "path": "../article-fetcher" },
    { "path": "../email-sender" },
    { "path": "../epub-converter" }
  ]
}
